<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchievementsFragment"> <!-- Assuming you'll create AchievementsFragment -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Sustainability Journey"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Eco Warrior Achievement -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivBadgeEcoWarrior"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_badge_eco_warrior" 
                    android:contentDescription="Eco Warrior Badge"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tvAchievementEcoWarrior"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eco Warrior"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivStatusEcoWarrior"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_status_locked" 
                    android:contentDescription="Status"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Green Commuter Achievement -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivBadgeGreenCommuter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_badge_green_commuter"
                    android:contentDescription="Green Commuter Badge"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tvAchievementGreenCommuter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Green Commuter"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivStatusGreenCommuter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_status_locked"
                    android:contentDescription="Status"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Energy Saver Achievement -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivBadgeEnergySaver"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_badge_energy_saver"
                    android:contentDescription="Energy Saver Badge"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/tvAchievementEnergySaver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Energy Saver"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivStatusEnergySaver"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_status_locked"
                    android:contentDescription="Status"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
